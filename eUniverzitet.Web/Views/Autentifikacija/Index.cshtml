@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>e-Univerzitet</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
</head>
<body style="background: url('/Content/background.jpg'); background-size: 100%;">

    <div class="container" style="width: 1100px; background-color: #ffffff; background-color: rgba(255, 255, 255, 0.7);">

        @using (Html.BeginForm("Provjera", "Autentifikacija", FormMethod.Get))
        {
            <h2 class="form-signin-heading">Logiranje na sistem</h2>

            <input type="text" class="form-control" name="username" id="username" placeholder="korisničko ime" required autofocus />

            <input type="password" class="form-control" id="password" name="password" placeholder="Lozinka" required />

            <div class="checkbox">
                <label>
                    <input type="checkbox" id="zapamti" name="zapamti" />
                    Zapamti me
                </label>
            </div>
         
         <button class="btn btn-lg btn-primary btn-block" type="submit">Prijavi se</button>
            <h2></h2>
        }
    </div> <!-- /container -->




    <script src="~/Scripts/jquery-2.1.3.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
</body>
</html>




