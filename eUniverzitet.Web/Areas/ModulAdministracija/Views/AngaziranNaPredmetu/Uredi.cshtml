@model eUniverzitet.Web.Areas.ModulAdministracija.Models.AngaziranNaPredmetuUrediVM

@{
    Layout = null;
}

@using (Ajax.BeginForm("Snimi", "AngaziranNaPredmetu", new AjaxOptions { UpdateTargetId = "ajaxAngazmani-" + Model.IzvodjenjePredmetaId }))
{
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.IzvodjenjePredmetaId)

    <div class="control-group">
        <label>Nastavno osoblje</label>
        @Html.DropDownListFor(model => model.NastavnoOsobljeId, Model.NastavnoOsobljeStavke, new { @class = "form-control" })
      
    </div>

    <div class="control-group">
        <label>Uloga na predmetu</label>
        @Html.DropDownListFor(model => model.AngaziranNaPredmetTip, Model.AngaziranNaPredmetTipStavke, new {@class = "form-control"})
    </div>

    <input type="submit" value="Snimiaa" class="btn btn-danger"/>
    @Ajax.ActionLink("Odustani", "Index", "AngaziranNaPredmetu", new { izvodjenjePredmetaId = Model.IzvodjenjePredmetaId }, new AjaxOptions { UpdateTargetId = "ajaxAngazmani-" + Model.IzvodjenjePredmetaId }, new { @class = "btn btn-default" })
}






